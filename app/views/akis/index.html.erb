<p id="notice"><%= notice %></p>

<h1>Listing Akis</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @akis.each do |aki| %>
      <tr>
        <td><%= aki.title %></td>
        <td><%= aki.body %></td>
        <td><%= link_to 'Show', aki %></td>
        <td><%= link_to 'Edit', edit_aki_path(aki) %></td>
        <td><%= link_to 'Destroy', aki, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

